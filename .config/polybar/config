[module/battery]
;https://github.com/jaagr/polybar/wiki/Module:-battery
type = internal/battery

battery = BAT1
adapter = AC0
full-at = 100

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%%
format-charging-foreground = ${colors.foreground}
format-charging-background = ${colors.background}
format-charging-underline = #a3c725

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%
format-discharging-underline = #c7ae25
format-discharging-foreground = ${colors.foreground}
format-discharging-background = ${colors.background}

format-full-prefix = " "
format-full-underline = #a3c725
format-full-foreground = ${colors.foreground}
format-full-background = ${colors.background}

format-foreground = ${colors.foreground}
format-background = ${colors.background}

ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

################################################################################

[module/brightness]
type = internal/backlight
card = intel_backlight
label = %percentage%%
format = %{A1:brightnessctl s 1%:}%{A2:brightnessctl s 30%:}%{A3:brightnessctl s 100%:}%{A4:brightnessctl s +5%:}%{A5:brightnessctl s 5%-:}<ramp> <label>%{A}%{A}%{A}%{A}%{A}
ramp-0 = "%{T1} %{T-}"
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline = #735cb0

################################################################################

[module/date]
;https://github.com/jaagr/polybar/wiki/Module:-date
type = internal/date

interval = 1
date =
date-alt = " %d-%m-%Y"
time = %H:%M
time-alt = %H:%M:%S
format-prefix = " "
format-underline = #6ab43e
format-foreground = ${colors.foreground}
format-background = ${colors.background}
label = %date% %time%

###############################################################################

[module/next]
;https://github.com/dietervanhoof/polybar-spotify-controls
type = custom/script

interval = 86400
format = "%{T3}<label>"
exec = echo ""
exec-if = "pgrep spotify -x"
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
format-foreground = ${colors.foreground}
format-background = ${colors.background}

################################################################################

[module/pacman-updates]
type = custom/script
;exec = pacman -Qu | wc -l
exec = checkupdates | wc -l
interval = 1000
label = %output%
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = " "
format-underline = #fd4084

###############################################################################

[module/previous]
;https://github.com/dietervanhoof/polybar-spotify-controls
type = custom/script

interval = 86400
format = "%{T3}<label>"
exec = echo ""
exec-if = "pgrep spotify -x"
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
format-foreground = ${colors.foreground}
format-background = ${colors.background}

###############################################################################

[module/redshift]
;https://github.com/VineshReddy/polybar-redshif
type = custom/script

format-prefix = " "
exec = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh temperature
click-left = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh toggle
scroll-up = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh increase
scroll-down = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh decrease
interval=0.5
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline = #e89d41

###############################################################################

[module/spotify]
;https://github.com/Jvanrhijn/polybar-spotify
type = custom/script

interval = 1
format = <label>
exec = python ~/.config/polybar/scripts/spotify_status.py -f '{play_pause}  {artist} - {song}' -p ','
format-underline = #1db954
format-foreground = ${colors.foreground}
format-background = ${colors.background}
click-left = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
click-right = bspc desktop --focus 10

################################################################################

[module/volume]
;https://github.com/jaagr/polybar/wiki/Module:-volume
type = internal/volume

format-volume = "<label-volume>"

label-volume = "  %percentage%%"
label-muted = muted

format-volume-foreground = ${colors.foreground}
format-volume-background = ${colors.background}
format-volume-underline = #cd1f3f
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.foreground}
format-muted-underline = "#ff0000"
format-muted-foreground = ${colors.foreground}
format-muted-background = ${colors.background}

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5

format-volume = "<label-volume>"
format-volume-foreground = ${colors.foreground}
format-volume-background = ${colors.background}
format-volume-underline = #cd1f3f

label-volume = "  %percentage%%"
label-muted = " muted"
format-muted-underline = "#ff0000"
format-muted-foreground = ${colors.foreground}
format-muted-background = ${colors.background}

click-right = pavucontrol

